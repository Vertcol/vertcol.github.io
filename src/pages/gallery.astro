---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import "../base.css";

const imageFiles = await Astro.glob("../content/gallery/*/*");
---

<Layout title="Digified - Contact">
    <main>
        <div class="flex w-full justify-center">
            <h1
                class="inline-block rounded-md bg-gray-800 px-6 py-2 text-2xl font-extrabold text-white m-4"
            >
                GALLERY
            </h1>
        </div>
        <div class="container mx-auto p-4">
            <div
                class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4"
            >
                {
                    imageFiles.map((img) => (
                        <Image
                            src={img.default}
                            width="600"
                            alt=""
                            class="mb-3 w-full rounded"
                        />
                    ))
                }
            </div>
        </div>
    </main>
</Layout>
